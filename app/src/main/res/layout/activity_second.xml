        android:background="@color/colorAccent"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <WebView
        android:id="@+id/webView"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

</LinearLayout>
